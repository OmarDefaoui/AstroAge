<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#ff8484"
                android:centerColor="#f2ff00"
                android:endColor="#c7ff66"
                android:angle="45">
            </gradient>
            <stroke
                android:color="#d9a1f1"
                android:width="2dp">
            </stroke>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp">
            </padding>
            <corners
                android:bottomLeftRadius="45dp"
                android:topLeftRadius="90dp">
            </corners>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#ff8484"
                android:centerColor="#fff"
                android:endColor="#c7ff66"
                android:angle="45">
            </gradient>
            <stroke
                android:color="#d9a1f1"
                android:width="2dp">
            </stroke>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp">
            </padding>
            <corners
                android:bottomLeftRadius="45dp"
                android:topLeftRadius="90dp">
            </corners>
        </shape>
    </item>

</selector>